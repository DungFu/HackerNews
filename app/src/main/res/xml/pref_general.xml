<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="animations_switch"
        android:summary="@string/pref_description_animations"
        android:title="@string/pref_title_animations"
        />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_browser_titles"
        android:entryValues="@array/pref_browser_values"
        android:key="browser"
        android:summary="%s"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_browser"
        />

</PreferenceScreen>
